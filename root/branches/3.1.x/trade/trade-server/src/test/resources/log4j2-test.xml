<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
  <Appenders>
    <Console name="STDOUT" target="SYSTEM_OUT">
      <PatternLayout pattern="%d %-5p [%t] %C (%F:%L) - %m%n"/>
    </Console>
  </Appenders>
  <Loggers>
    <Root level="warn">
      <AppenderRef ref="STDOUT"/>
    </Root>
    <logger name="org.marketcetera" level="info"/>
    <logger name="org.marketcetera.trade.service" level="debug"/>
    <logger name="org.marketcetera.brokers.service" level="debug"/>
    <logger name="metc.brokers" level="info"/>
  </Loggers>
</Configuration>
